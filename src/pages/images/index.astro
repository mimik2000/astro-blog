---
import { Image, Picture } from "astro:assets";
import MainLayout from "../../layouts/MainLayout.astro";

import post05Img from "@images/post-05.png"

---

<MainLayout title="ImÃ¡genes">
  
    <img 
    loading="eager" 
    src="/assets/images/post-05.png" 
    width="250" 
    height="250">

    <Image
    src={post05Img} 
    width="250" 
    height="250"
    alt="Imagen del post"
    />
    
    <Image
    src={post05Img}
    style={
        {width: "250px",
        height: "250px",
    }
    } 
    width="250" 
    height="250"
    alt="Imagen del post"
    />

    <h1>quality low</h1>
    <Image
    src={post05Img}
        quality="low"
    width="250" 
    height="250"
    alt="Imagen del post"
    />

    <h1>Formato</h1>
    <Image
    src={post05Img}
        format="jpg"
    width="250" 
    height="250"
    alt="Imagen del post"
    />
    
    <h1>Picture</h1>
            <!-- formats={["avif", "jpg"]} -->

    <Picture
    src={post05Img}
    widths={[240, 540, 720, post05Img.width]}
  sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}

    width="250" 
    height="250"
    alt="Imagen"
    />

    
    <div style={{
        height: "3000px",
    }}></div>

    <img loading="lazy" src="/assets/images/post-05.png" width="250" height="250">

</MainLayout>

<style>
    h1 {
        @apply text-white mt-10;
    }
    
</style>